<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="dblades01.qub.ac.uk.tests">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        android:hardwareAccelerated="true" />

        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity android:name=".LifeCycleTest"></activity>
        <activity android:name=".SingleTouchTest"></activity>
        <activity android:name=".MultiTouchTest"></activity>
        <activity android:name=".KeyTest"></activity>
        <activity android:name=".AccelerometerTest"></activity>
        <activity android:name=".AssetsTest"></activity>
        <activity android:name=".ExternalStorageTest"></activity>
        <activity android:name=".SoundPoolTest"></activity>
        <activity android:name=".MediaPlayerTest"></activity>
        <activity android:name=".FullScreenTest"></activity>
        <activity android:name=".RenderViewTest"></activity>
        <activity android:name=".ShapeTest"></activity>
        <activity android:name=".BitmapTest"></activity>
        <activity android:name=".FontTest"></activity>
        <activity android:name=".SurfaceViewTest"></activity>
    </application>

    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
</manifest>
